    <script>
        function calculatePricing() {
            // Get input values
            const hourlyWage = parseFloat(document.getElementById('hourlyWage').value) || 0;
            const payrollTaxes = parseFloat(document.getElementById('payrollTaxes').value) || 0;
            const crewSize = parseInt(document.getElementById('crewSize').value) || 1;
            const billableHours = parseFloat(document.getElementById('billableHours').value) || 40;
            
            const vehicleCosts = parseFloat(document.getElementById('vehicleCosts').value) || 0;
            const insurance = parseFloat(document.getElementById('insurance').value) || 0;
            const equipment = parseFloat(document.getElementById('equipment').value) || 0;
            const businessExpenses = parseFloat(document.getElementById('businessExpenses').value) || 0;
            
            // Calculate true labor cost per hour
            const laborCostPerHour = (hourlyWage + payrollTaxes) * crewSize;
            
            // Calculate overhead per hour
            const monthlyOverhead = vehicleCosts + insurance + equipment + businessExpenses;
            const weeklyOverhead = monthlyOverhead / 4.33;
            const overheadPerHour = weeklyOverhead / billableHours;
            
            // Calculate rates
            const breakEvenRate = laborCostPerHour + overheadPerHour;
            const profitableRate = breakEvenRate * 1.4; // 40% markup
            
            // Update display
            document.getElementById('laborCostPerHour').textContent = `${laborCostPerHour.toFixed(2)}`;
            document.getElementById('overheadPerHour').textContent = `${overheadPerHour.toFixed(2)}`;
            document.getElementById('breakEvenRate').textContent = `${breakEvenRate.toFixed(2)}`;
            document.getElementById('profitableRate').textContent = `${profitableRate.toFixed(2)}`;
            
            // Show shock reveal if they're undercharging
            const typicalRate = 55; // Most people charge around $50-60/hour
            if (typicalRate < breakEvenRate) {
                const hourlyLoss = breakEvenRate - typicalRate;
                const monthlyLoss = hourlyLoss * billableHours * 4.33;
                const yearlyLoss = monthlyLoss * 12;
                
                document.getElementById('monthlyLoss').textContent = `${monthlyLoss.toFixed(0)}`;
                document.getElementById('yearlyLoss').textContent = `${yearlyLoss.toFixed(0)}`;
                document.getElementById('shockReveal').classList.add('show');
            } else {
                document.getElementById('shockReveal').classList.remove('show');
            }
        }

        // Add event listeners to all input fields
        document.querySelectorAll('.input-field').forEach(input => {
            input.addEventListener('input', calculatePricing);
        });

        // Email capture functionality
        function captureEmail() {
            const email = document.getElementById('emailInput').value;
            
            if (!email || !email.includes('@')) {
                alert('Please enter a valid email address');
                return;
            }
            
            // Show success message
            const button = document.querySelector('.cta-button');
            const originalText = button.textContent;
            button.textContent = '✅ Check Your Email!';
            button.style.background = 'linear-gradient(135deg, #6b7280, #374151)';
            
            // Simulate redirect to thank you page
            setTimeout(() => {
                alert('Success! Check your email for advanced pricing tools and strategies.');
                // In real implementation: window.location.href = 'thank-you.html';
            }, 500);
            
            // Reset button
            setTimeout(() => {
                button.textContent = originalText;
                button.style.background = 'linear-gradient(135deg, #1e40af, #3730a3)';
            }, 3000);
        }

        // Calculate initial values on page load
        document.addEventListener('DOMContentLoaded', function() {
            calculatePricing();
            
            // Add interactive elements
            const resultCards = document.querySelectorAll('.result-card');
            resultCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.5s ease';
                    
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 150);
            });
        });

        // Add hover effects
        document.querySelectorAll('.result-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-12px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(-8px) scale(1)';
            });
        });

        // Allow Enter key for email capture
        document.getElementById('emailInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                captureEmail();
            }
        });
    </script>
</body>
</html>
